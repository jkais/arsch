#!/bin/bash
mkdir -p ~/screenshots
pkill slurp || hyprshot -m ${1:-region} --raw |
  satty --filename - \
    --output-filename "~/screenshots/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png" \
    --early-exit \
    --actions-on-enter save-to-clipboard \
    --save-after-copy \
    --copy-command 'wl-copy'
