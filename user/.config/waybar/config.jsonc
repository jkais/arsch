    "spacing": 20, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
      "hyprland/workspaces",
    ],
    "modules-center": [
      "clock",
    ],
    "modules-right": [
      "pulseaudio",
      "network",
      "bluetooth",
      "cpu",
      "power-profiles-daemon",
